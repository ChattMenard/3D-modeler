<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.CMTCast" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="Theme.CMTCast" parent="Base.Theme.CMTCast" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.CMTCast.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.CMTCast</item>
    </style>
</resources>