<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Safety &amp; Medical Warnings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRITICAL: READ BEFORE USING"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is NOT FDA approved and should ONLY be used under medical supervision. All generated casts MUST be reviewed by qualified healthcare professionals before use."
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEASUREMENT ACCURACY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Typical accuracy: ±2-5mm\n⚠️ Not suitable for precision medical devices\n⚠️ Environmental factors affect accuracy\n⚠️ User technique impacts results\n⚠️ Computer vision has inherent limitations\n⚠️ Always verify measurements professionally"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VALIDATION REPORT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALWAYS review the quality validation report:\n\n✅ OK = Measurements within acceptable range\n   • Proceed with caution\n   • Still requires professional review\n\n⚠️ WARNING = Issues detected\n   • Use with extra caution\n   • Consider retaking measurements\n   • Professional review mandatory\n\n❌ ERROR = Critical failures\n   • DO NOT USE\n   • Retake measurements\n   • Fix detected issues"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROFESSIONAL CONSULTATION REQUIRED"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before using ANY cast generated by this app:\n\n🏥 Consult with licensed physician\n🏥 Have prosthetist review 3D model\n🏥 Verify fit and safety before use\n🏥 Follow all medical recommendations\n🏥 Report any discomfort immediately\n🏥 Regular follow-up appointments\n🏥 Monitor for skin irritation or pressure sores"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3D PRINTING SAFETY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Use biocompatible materials only\n⚠️ Food-safe PLA or medical-grade materials\n⚠️ Proper print settings (no gaps/weaknesses)\n⚠️ Post-processing to smooth edges\n⚠️ Test fit before extended use\n⚠️ Inspect for defects before wearing\n⚠️ Clean and sanitize properly"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHEN TO SEEK IMMEDIATE MEDICAL HELP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚨 Severe pain or discomfort\n🚨 Skin breakdown or blisters\n🚨 Numbness or tingling\n🚨 Swelling or discoloration\n🚨 Restricted blood flow\n🚨 Signs of infection\n🚨 Device breaks or cracks\n🚨 Any concerning symptoms"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CMT-SPECIFIC CONSIDERATIONS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• CMT causes progressive nerve damage\n• Muscle weakness affects cast fit over time\n• Sensation loss may hide pressure issues\n• Regular monitoring essential\n• Cast may need adjustments\n• Work closely with neurologist/orthopedist\n• Consider disease progression in design"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ DISCLAIMER: Developer assumes NO LIABILITY for injuries or damages. User assumes all risks. This is NOT a medical device. For research/educational purposes only."
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.4"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
